%h1="Login"
- form_for @user_session, :url => {:action => "create"} do |f|
  = f.error_messages
  %p
    %div
      = f.label :username, "Username or email address"
    %div
      = f.text_field :username
  %p
    %div
      = f.label :password
    %div
      = f.password_field :password
  %p
    %div
      = f.label :remember_me
    %div
      = f.check_box :remember_me
  %p
    %div
      = f.submit "Log-in"
%br
%p
  Don't have an account?
  = link_to "Register a new account", new_account_path
%p
  Forgotten your username or password?
  = link_to "Request a new password", new_password_reset_path
