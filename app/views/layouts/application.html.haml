!!!
%html
  %head
    %title
      = (yield(:title) || controller.action_name) + " | Manchester LETS"
    = stylesheet_link_tag "reset", "typography", "grid", "ie", "forms", "lets"
    =# stylesheet_link_tag "tabs"
    = javascript_include_tag :defaults, 'jquery-1.5.min', 'jquery.jeditable', 'jquery-ui-1.8.9.custom.min'
    = csrf_meta_tag
  %body
    #hd
      #maintitle
        Manchester LETS
      %hr
    %div.centre-element
      - flash.each do |name, msg|  
        = content_tag :div, msg, :id => "flash_#{name}"
        %script{:type=>"text/javascript"}
          new Effect.Pulsate('flash_error', {pulses: 2});
    .container
      %div{ :class => "column span-6" }
        #nav
          #acttabs
            = render :partial => "layouts/tabs"  
          #authtabs
            = render :partial => "layouts/user_tabs"
      %div{ :class => "column span-18 last" }
        #bd
          = yield
